<% if current_user.admin? %>

        <div id="palette_admin">
  	
        	   <% if object.class.to_s == "User" %>
        	   		<% if @project != nil %>
        	 			<%= link_to "Retirer", "/projects/#{@project.id}/remove_member?user_id=#{object.id}", :remote => true %> |
        	 		<% end %>
					<%= link_to "Modifier", "/contacts/#{object.contact.id}/edit" %> 
			   <% else %>
					<%= link_to "Modifier", "/#{object.class.to_s.downcase}s/#{object.id}/edit" %>
			   <% end %>
        	
        		|
                          
              <%= link_to "Supprimer", object, :method => :delete, :confirm => "Etes-vous certain ?" %>
        </div>   
                       
<% end %>