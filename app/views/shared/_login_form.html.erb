   
    <div class="col-lg-5 col-sm-7">
    	
        <div class="top_left_cont zoomIn wow animated"> 
        	
        	<div class="form">
        		<%= form_for(:session, :url => sessions_path) do |f| %>
        		
				    <%= f.label :email, "Email", :class => "label" %><br />
				    <%= f.text_field :email, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>

				    <%= f.label :password, "Mot de passe", :class => "label" %><br />
				    <%= f.password_field :password, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>

				    <%= f.submit "S'identifier", :class => "input-btn" %>
				<% end %>
				
				<% if flash[:error] %>
				  <div class="error_box"><%= flash[:error] %></div>
			  	<% end %>
	          </div>
	          
	          
        	      	        
        </div>
        
    </div>