
<% if !object.nil? && object.errors.any? %>
<div class="col-lg-12 col-sm-7">
  <div class="error_box">
    <h2><%= pluralize(object.errors.count, "error") %> 
        prohibited this <%= object.class.to_s.underscore.humanize.downcase %> 
        from being saved:</h2>
    <p>There were problems with the following fields:</p>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
</div>
<% end %>
<% if flash[:error] %>
<div class="col-lg-12 col-sm-7">
  <div class="error_box">
    <%= flash[:error] %>
  </div>
</div>
<% end %>
<% if flash[:success] %>
<div class="col-lg-12 col-sm-7">
  <div class="success_box">
    <%= flash[:success] %>
  </div>
</div>
<% end %>

