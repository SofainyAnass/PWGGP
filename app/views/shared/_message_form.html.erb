<%= form_for @message, :remote => true do |f| %> 
	<%= hidden_field_tag :user, @user.id %>
    <%= f.text_area :content, :class => "input-text text-area", :placeholder => "Message a envoyer . . .", :maxlength => "200", :required => true %>
    <%= f.submit "Envoyer", :class => "input-btn" %>
<% end %>

