
<!-- Portfolio -->
<section id="Portfolio" class="content"> 
  
  <!-- Container -->
  <div class="container portfolio_title"> 
    
    <%= render 'shared/messages', :object => @project %>
    
    <!-- Title -->
    <div class="section-title">
      <h2><%= @titre %></h2>
      <h5><%= link_to "Nouveau projet",  new_project_path %></h5>
    </div>
    <!--/Title --> 
    
  </div>
  <!-- Container -->
  
  <div class="portfolio-top"></div>
  

  
  <!-- Portfolio Filters -->
  <div class="portfolio">    
    
    
    <div id="filters" class="sixteen columns">
    	  	
      <ul class="clearfix">

      	
        <li><a id="all" href="#" data-filter="*" class="active">
          <h5>Tout</h5>
          </a></li>
          
        <li><a class="" href="#" data-filter=".Nouveau">
          <h5>Nouveau</h5>
        </a></li>
        
        <li><a class="" href="#" data-filter=".Encours">
          <h5>En cours</h5>
        </a></li>
        
        <li><a class="" href="#" data-filter=".Terminé">
          <h5>Terminé</h5>
        </a></li>
        
        <li><a class="" href="#" data-filter=".Enarrêt">
          <h5>En arrêt</h5>
        </a></li>
          

      </ul>
    </div>
    <!--/Portfolio Filters --> 
    
    <!-- Portfolio Wrapper -->
    <div id="portfolio_wrapper" class="isotope fadeInLeft animated wow" style="position: relative; overflow: hidden; height: 480px; width: 1203px;" >     
      
      
      <!-- Portfolio Item -->
      <% unless @projects.empty? %>
						
			<%= will_paginate @projects %>
														
			<% @projects.each do |project| %>
					        
				<% @project = project %>

				<%= render "project_info" %>
			          					          
			<% end %>
					        
			<%= will_paginate @projects %>
		<% else %>
			Aucun projet.        
		<% end %>
      <!--/Portfolio Item -->
     
    </div>
    <!--/Portfolio Wrapper --> 
    
  </div>
  <!--/Portfolio Filters -->
  
  <div class="portfolio_btm"></div>
  
  
  <div id="project_container">
    <div class="clear"></div>
    <div id="project_data"></div>
  </div>
 
  
</section>
<!--/Portfolio --> 



