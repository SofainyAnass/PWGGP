<%= render 'menu_action', :object => @task %>

<section class="page_section team" id="team"><!--main-section team-start-->
  <div class="container">
		<div class="member-area">
			
					<h3>Informations générales :</h3>
		
					<div id ="task" class="row">
							<div class="col-lg-6 col-sm-7">
		
					        		<%= form_for(@task) do |f| %>       		
					        		
										<%= f.label :nom, "Nom", :class => "label" %><br />
										<%= f.text_field :nom, :class => "input-text", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
					
					
										<%= f.label :datedebut, "Date de début :", :class => "label" %>
										<%= f.date_select :datedebut, :use_two_digit_numbers => true, :order =>  [:day, :month, :year] , :class => "input-text", :required => true %></br></br>
										
										<%= f.label :datefin, "Date de fin :", :class => "label" %>
										<%= f.date_select :datefin, :use_two_digit_numbers => true, :order =>  [:day, :month, :year] , :class => "input-text", :required => true %></br></br>
										
										<%= f.label :etat, "Etat", :class => "label" %><br />
										<%= select_tag  "task[etat]", options_for_select([ "Nouveau", "En cours" , "Terminé", "En arrêt" ], @task.etat) , :class => "input-text", :required => true %>
												
										<%= f.submit "Modifier", :class => "input-btn2" %>
										
									<% end %>

									
							</div>
					</div>
					
					<h3>Membres :</h3>
					
					<div id="search_member">
						
						<%= form_tag('/tasks/add_member', remote: true) do %>
						      <%= hidden_field_tag :id, @task.id %>
							  <%= autocomplete_field_tag :contact_name,"",autocomplete_contact_nom_contacts_path,:class => "input-text", :required => true %>
							  <%= submit_tag "Ajouter", :class => "input-btn2" %>
						<% end %>
						
						<div id= "error_msg" class="error_box" hidden >
							    <%= flash[:error] %>
						</div>
	
					</div>
					
					
					
					<div id ="membres" class="row">

							 <% unless @users.empty? %>				
					        	
					        	<%= will_paginate @users %>
					        	
					        		<%= render @users %>
					        		
					        	<%= will_paginate @users %>
						        
						     <% end %>

					</div>

		</div>
</div>
</section>
				



