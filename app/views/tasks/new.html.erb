<%= render 'menu_action', :object => @task %>

<section id="aboutUs">
		
<div class="inner_wrapper">

	
  <div class="container">
  	
    <div class="inner_section">
    	
		<div class="col-lg-6 col-sm-7">
			
			<h2>Informations générales :</h2>
	
					<div class="form">
		        		<%= form_for(@task) do |f| %>       		
		        		
							<%= f.label :nom, "Nom :", :class => "label" %>
							<%= f.text_field :nom, :class => "input-text", :required => true %>		
		
							<%= f.label :datedebut, "Date de début :", :class => "label" %>
							<%= f.date_select :datedebut, :use_two_digit_numbers => true, :order =>  [:day, :month, :year] , :class => "input-text", :required => true %></br></br>
						
							<%= f.label :datefin, "Date de fin :", :class => "label" %>
							<%= f.date_select :datefin, :use_two_digit_numbers => true, :order =>  [:day, :month, :year] , :class => "input-text", :required => true %></br></br>
							
							<%= f.label :etat, "Etat :", :class => "label" %>
							<%= select_tag  "task[etat]", options_for_select([ "Nouveau", "En cours" , "Terminé", "En arrêt" ], @task.etat), :class => "input-text", :required => true %>
									
							<%= f.submit "Créer", :class => "input-btn2" %>
							
						<% end %>
			          </div>
	       
	        
	    </div>


    
    </div>
  </div> 
  </div>
</section>

