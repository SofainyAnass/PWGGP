<% if signed_in? %>

<section id="aboutUs">
		
<div class="inner_wrapper">

	
  <div class="container">
  	
  	<%= render 'shared/messages', :object => @micropost %>
  	
    <div class="inner_section">
    	
		<div class="col-lg-5 col-sm-7">
	        <h2>Exprimez-vous :</h2>
				   		<%= render 'shared/micropost_form' %>
	     			    <%= render 'shared/feed' %>
	        
	    </div>
	    <% if !signed_in? %>
	    	<%= render 'shared/login_form' %>
	    <% end %>
    
    </div>
  </div> 
  </div>
</section>

<% else %>

<section id="hero_section" class="top_cont_outer">
  <div class="hero_wrapper">
    <div class="container">
      <div class="hero_section"> 
      	<div class="row">
      		<div class="col-lg-12 col-sm-7">
      			<div class="logo">Logo</div>
      		</div>
    <div class="col-lg-6 col-sm-7">
        <div class="top_left_cont zoomIn wow animated"> 
        	
        	<h2>Bienvenue visiteur !</h2>			
			  <p>
			    Ceci est la page d'acceuil de l'application.
			    Si vous possedez déjà un compte veuillez vous identifier, sinon veuillez vous inscrire.</p>			
			  <%= link_to "S'inscrire !", signup_path, :class => "read_more2" %>

		        
        </div>        
    </div>
    <% if !signed_in? %>
    	<%= render 'shared/login_form' %>
    <% end %>

</div>     			
        	
      </div>
    </div>
  </div>
</section>

<% end %>


			