	
<section id="hero_section" class="top_cont_outer">
  <div class="hero_wrapper">
    <div class="container">
      <div class="hero_section"> 
      	<div class="row">
      		
      		<%= render 'shared/messages', :object => @user %>
      		
      		<div class="col-lg-5 col-sm-7">
    	
		        <div class="top_left_cont zoomIn wow animated"> 		        	
		        	
		        	<%= link_to "<< Retour", root_path, :class => "label" %>
		        	
		        	<h2><%= @titre %></h2>
		  	        	
		        	<div class="form">
		        		<%= form_for(@user) do |f| %>       		
		        		
							<%= f.label :login, "Login", :class => "label" %><br />
							<%= f.text_field :login, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
		
							<%= f.label :password, "Mot de passe", :class => "label" %><br />
							<%= f.password_field :password, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
		
							<%= f.label :password_confirmation, "Confirmation", :class => "label" %><br />
							<%= f.password_field :password_confirmation, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
		
							<%= f.submit "Inscription", :class => "input-btn" %>
							
						<% end %>
			          </div>
		        	      	        
		        </div>
		        
		    </div>	        		
		</div>     			     	
      </div>
    </div>
  </div>
</section>

	

