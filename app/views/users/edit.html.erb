<div class="left">
	<h2><%= @titre %></h2>
	
	<%= form_for(@user) do |f| %>
	  <%= render 'shared/error_messages', :object => f.object %>
	  <div class="field">
	    <%= f.label :nom, "Nom" %><br />
	    <%= f.text_field :nom %>
	  </div>
	  <div class="field">
	    <%= f.label :email, "eMail" %><br />
	    <%= f.text_field :email %>
	  </div>
	  <div class="field">
	    <%= f.label :password, "Mot de passe" %><br />
	    <%= f.password_field :password %>
	  </div>
	  <div class="field">
	    <%= f.label :password_confirmation, "Confirmation" %><br />
	    <%= f.password_field :password_confirmation %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Modifier" %>
	  </div>
	<% end %>

</div>

