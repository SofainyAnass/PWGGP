
<section class="page_section team" id="team"><!--main-section team-start-->
  <div class="container">
		<div class="member-area">
			
					<h4>Informations générales :</h4>
		
					<div id ="project" class="row">
							<div class="col-lg-6 col-sm-7">
								
								<%= render @project %>
									
							</div>
					</div>
					
					
					
					<h4>Membres :</h4>
					
					<%= form_tag('/projects/add_member', remote: true) do %>
					      <%= hidden_field_tag :id, @project.id %>
						  <%= label_tag :nouveau_membre, "Nouveau membre", :class => "label" %></br>
						  <%= text_field_tag :contact_name,"",:class => "input-text", :required => true %>
						  <%= submit_tag "Ajouter", :class => "input-btn2" %>
					<% end %>
					
					<div id ="membres" class="row">

							 <% unless @users.empty? %>				
					        	
					        	<%= will_paginate @users %>
					        	
					        		<%= render @users %>
					        		
					        	<%= will_paginate @users %>
						        
						     <% end %>

					</div>

		</div>
</div>
</section>
				
