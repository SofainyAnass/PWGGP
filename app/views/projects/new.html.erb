<%= render 'menu_action', :object => @project %>

<section id="aboutUs">
		
<div class="inner_wrapper">

	
  <div class="container">
  	
    <div class="inner_section">
    	
		<div class="col-lg-6 col-sm-7">
			
			<h2>Informations générales :</h2>
	
					<div class="form">
		        		<%= form_for(@project) do |f| %>       		
		        		
							<%= f.label :nom, "Nom :", :class => "label" %>
							<%= f.text_field :nom, :class => "input-text", :required => true %>	
							
							<%= f.label :datedebut, "Date de début :", :class => "label" %>
							<%= f.text_field :datedebut, :class => "input-text", :required => true %></br></br>					
		
							<%= f.label :datefin, "Date de fin :", :class => "label" %>
							<%= f.text_field :datefin, :class => "input-text", :required => true %></br></br>
													
							<%= f.label :contact_name, "Responsable :", :class => "label" %>
							<%= autocomplete_field_tag :contact_name,"",autocomplete_contact_nom_contacts_path,:class => "input-text", :required => true %>		
							
							<%= f.label :etat, "Etat :", :class => "label" %>
							<%= select_tag  "project[etat]", options_for_select([ "Nouveau", "En cours" , "Terminé", "En arrêt" ], @project.etat), :class => "input-text", :required => true %>
									
							<%= f.submit "Créer", :class => "input-btn2" %>
							
						<% end %>
			          </div>
	       
	        
	    </div>


    
    </div>
  </div> 
  </div>
</section>

