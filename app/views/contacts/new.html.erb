<section id="hero_section" class="top_cont_outer">
  <div class="hero_wrapper">
    <div class="container">
      <div class="hero_section"> 
      	<div class="row">		
		
		<%= render 'shared/messages', :object => @contact %>

    		<div class="col-lg-5 col-sm-7">
    	
		        <div class="top_left_cont zoomIn wow animated"> 
		  	        	
		        	<div class="form">
		        		<%= form_for(@contact) do |f| %>   
		        		
		        			<%= f.label :prenom, "Prenom", :class => "label" %><br />
							<%= f.text_field :prenom, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
	    		
		        		
							<%= f.label :nom, "Nom", :class => "label" %><br />
							<%= f.text_field :nom, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>


							<%= f.label :email, "Email", :class => "label" %><br />
							<%= f.text_field :email, :class => "input-text", :onFocus => "if(this.value==this.defaultValue)this.value='';", :onBlur =>"if(this.value=='')this.value=this.defaultValue;" %>
							
						<% end %>
			          </div>
		        	      	        
		        </div>
		        
		    </div>
		 </div>     			        	
      </div>
    </div>
  </div>
</section>